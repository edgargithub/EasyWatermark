<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/launch_start">
        <Constraint
            android:id="@+id/iv_logo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:alpha="0.0"
            android:scaleX="0.0"
            android:scaleY="0.0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.2" />

        <Constraint
            android:id="@+id/tv_tips_pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            android:gravity="center"
            android:scaleX="0.0"
            android:scaleY="0.0"
            android:text="@string/tips_pick_image"
            android:textAlignment="center"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.75" />


        <Constraint
            android:id="@+id/iv_picker_tips"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:alpha="0.0"
            android:scaleX="0.0"
            android:scaleY="0.0"
            android:src="@drawable/ic_picker_image"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="@id/tv_tips_pick"
            motion:layout_constraintStart_toStartOf="@id/tv_tips_pick"
            motion:layout_constraintTop_toBottomOf="@id/tv_tips_pick"
            motion:layout_constraintVertical_bias="0" />

        <Constraint
            android:id="@+id/iv_go_about_page"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            android:rotation="90"
            android:scaleX="0.0"
            android:scaleY="0.0"
            android:src="@drawable/ic_more"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="@id/tv_tips_pick"
            motion:layout_constraintStart_toStartOf="@id/tv_tips_pick"
            motion:layout_constraintTop_toBottomOf="@id/iv_picker_tips"
            motion:layout_constraintVertical_bias="0.6" />


        <Constraint
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:visibility="invisible"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <Constraint
            android:id="@+id/iv_photo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorPrimaryDark"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:visibility="invisible"
            motion:layout_constraintBottom_toTopOf="@+id/tb_tool_bar"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/my_toolbar" />

        <Constraint
            android:id="@+id/tb_tool_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/colorPrimaryDark"
            android:visibility="invisible"
            motion:layout_constraintBottom_toTopOf="@+id/vp_control_panel"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/vp_control_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimaryDark"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHeight_percent="0.30"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/launch_end">
        <Constraint
            android:id="@+id/iv_logo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:alpha="1.0"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:src="@mipmap/ic_log_transparent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.30" />

        <Constraint
            android:id="@+id/tv_tips_pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            android:gravity="center"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:text="@string/tips_pick_image"
            android:textAlignment="center"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.75" />

        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:alpha="1.0"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:src="@drawable/ic_picker_image"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="@id/tv_tips_pick"
            motion:layout_constraintStart_toStartOf="@id/tv_tips_pick"
            motion:layout_constraintTop_toBottomOf="@id/tv_tips_pick" />

        <Constraint
            android:id="@+id/iv_go_about_page"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            android:rotation="90"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:src="@drawable/ic_more"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="@id/tv_tips_pick"
            motion:layout_constraintStart_toStartOf="@id/tv_tips_pick"
            motion:layout_constraintTop_toBottomOf="@id/iv_picker_tips"
            motion:layout_constraintVertical_bias="0.6" />

        <Constraint
            android:id="@+id/iv_photo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorPrimaryDark"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:visibility="invisible"
            motion:layout_constraintBottom_toTopOf="@+id/tb_tool_bar"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/my_toolbar" />

        <Constraint
            android:id="@+id/tb_tool_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/colorPrimaryDark"
            android:visibility="invisible"
            motion:layout_constraintBottom_toTopOf="@+id/vp_control_panel"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/vp_control_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimaryDark"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHeight_percent="0.30"
            motion:layout_constraintStart_toStartOf="parent" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/open_image_start">
        <Constraint
            android:id="@+id/iv_logo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:src="@mipmap/ic_log_transparent"
            android:visibility="gone"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/iv_picker_tips"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:src="@drawable/ic_picker_image"
            android:visibility="gone"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="@id/tv_tips_pick"
            motion:layout_constraintStart_toStartOf="@id/tv_tips_pick"
            motion:layout_constraintTop_toBottomOf="@id/tv_tips_pick" />

        <Constraint
            android:id="@+id/iv_go_about_page"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="90"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:src="@drawable/ic_more"
            android:visibility="gone"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="@id/tv_tips_pick"
            motion:layout_constraintStart_toStartOf="@id/tv_tips_pick"
            motion:layout_constraintTop_toBottomOf="@id/iv_picker_tips"
            motion:layout_constraintVertical_bias="0.6" />

        <Constraint
            android:id="@+id/tv_tips_pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:gravity="center"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:text="@string/tips_pick_image"
            android:textAlignment="center"
            android:visibility="gone"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:visibility="visible"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <Constraint
            android:id="@+id/iv_photo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#000"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:visibility="visible"
            motion:layout_constraintBottom_toTopOf="@+id/tb_tool_bar"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/my_toolbar" />

        <Constraint
            android:id="@+id/tb_tool_bar"
            style="@style/Widget.App.TabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:visibility="visible"
            motion:layout_constraintBottom_toTopOf="@+id/vp_control_panel"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:tabGravity="fill"
            motion:tabIndicatorColor="@color/colorAccent"
            motion:tabIndicatorFullWidth="false"
            motion:tabMode="fixed"
            motion:tabPaddingBottom="0dp" />

        <Constraint
            android:id="@+id/vp_control_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimaryDark"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHeight_percent="0.30"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <Transition
        android:id="@+id/transition_launch"
        motion:constraintSetEnd="@id/launch_end"
        motion:constraintSetStart="@+id/launch_start"
        motion:duration="550"
        motion:motionInterpolator="cubic(.34,.73,.12,1.08)" />

    <Transition
        android:id="@+id/transition_open_image"
        motion:constraintSetEnd="@id/open_image_start"
        motion:constraintSetStart="@+id/launch_end"
        motion:duration="750"
        motion:motionInterpolator="cubic(.34,.73,.12,1.08)" />
</MotionScene>
