<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/d_brand</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <!--        <item name="colorPrimary">@color/shrine_pink_900</item>-->
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_out</item>
    </style>

    <style name="AppTheme.ActionOverflowButtonStyle">
        <item name="android:src">@drawable/ic_more</item>
    </style>

    <style name="AppTheme.MaterialAboutActivity" parent="Theme.MaterialComponents">
        <item name="android:textSize">14sp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorAccent</item>
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/text_color_main</item>
    </style>

    <style name="AppTheme.TitleText" parent="AppTheme">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TipsText" parent="AppTheme">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_tips</item>
    </style>

    <style name="MySeekBarStyle">
        <item name="android:maxHeight">20dp</item>
        <item name="android:height">20dp</item>
        <item name="android:progressBackgroundTint">@color/white_14</item>
        <item name="android:progressTint">@color/white</item>
        <item name="android:colorControlActivated">@color/white</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:thumb">@drawable/thumb_seek_bar</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="color">@color/text_color_main</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.Dialog.MyDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="materialButtonStyle">@style/DialogButtonStyle</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/selector_tab_color</item>
        <item name="tabIconTint">@color/selector_tab_color</item>
        <item name="tabTextAppearance">@style/CustomTextAppearanceTab</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="@android:style/TextAppearance">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.EditTextDialogOverlay">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">@color/text_color_main</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/text_color_tips</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/selector_text_input_white</item>
        <item name="boxStrokeWidth">5dp</item>
        <item name="android:theme">@style/TextInputCursorStyle</item>
    </style>

    <style name="TextInputCursorStyle" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/white</item>
        <item name="android:progressBackgroundTint">@color/white</item>
    </style>

    <style name="MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Dialog.Button</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Dialog.Button</item>
    </style>

    <style name="Widget.App.Dialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>
    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AboutPageTextViewStyle">
        <item name="android:textColor">@color/d_neutral_3</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingEnd">28dp</item>
    </style>

</resources>