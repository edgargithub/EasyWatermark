<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <com.google.android.material.slider.Slider
        android:id="@+id/slide_content_size"
        style="@style/MySeekBarStyle"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:focusable="false"
        android:stepSize="1"
        android:valueFrom="1"
        android:valueTo="300"
        app:labelBehavior="floating"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:thumbColor="@color/colorSecondary"
        app:thumbRadius="10dp"
        app:thumbStrokeColor="@color/white"
        app:thumbStrokeWidth="2dp"
        app:tickColor="@color/white"
        app:trackColor="@color/white"
        app:trackColorActive="@color/colorAccent"
        app:trackColorInactive="@color/colorAccent"
        app:trackHeight="1dp"
        tools:value="340" />

    <TextView
        android:id="@+id/tv_progress_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="3dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textAlignment="center"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/slide_content_size"
        tools:text="5"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>